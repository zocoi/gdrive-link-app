{
  "name": "@linktr.ee/linkapp",
  "version": "0.0.44",
  "description": "Development, build, and deployment tooling for LinkApps",
  "type": "module",
  "bin": {
    "linkapp": "bin/cli.js",
    "create-linktree-link-run": "bin/cli.js"
  },
  "files": [
    "dist",
    "bin",
    "runtime",
    "dev-server",
    "linkapp-preview"
  ],
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/cli.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./sdk": {
      "types": "./dist/sdk/index.d.ts",
      "import": "./dist/sdk/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome check .",
    "format": "biome format --write .",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "@rsbuild/core": "^1.6.6",
    "@rsbuild/plugin-react": "^1.4.2",
    "archiver": "^7.0.1",
    "axios": "^1.7.9",
    "cac": "^6.7.14",
    "chokidar": "^3.6.0",
    "detect-port": "^2.1.0",
    "form-data": "^4.0.1",
    "jiti": "^2.6.1",
    "jsonwebtoken": "^9.0.2",
    "open": "^10.1.0",
    "openid-client": "^5.7.1",
    "picocolors": "^1.1.1",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.17.6",
    "@types/react": "^19.2.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
